<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity" >

    <ImageView
	    android:id="@+id/fondo_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/variable_progreso"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fondo1" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp" >
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="50dp"
	        android:text="@string/label_contrasena"
	        android:textColor="@color/blanco" />
	
	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="100dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="40dp"
	        android:ems="10"
	        android:inputType="textPassword"
	        android:saveEnabled="false" />
	
	    <Button
	        android:id="@+id/btnEnviar"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="90dp"
	        android:layout_marginRight="90dp"
	        android:layout_marginTop="90dp"
	        android:onClick="accesoUsuarioRegistrado"
	        android:text="@string/label_acceso_aplicacion" />
	
	</RelativeLayout>

</FrameLayout>