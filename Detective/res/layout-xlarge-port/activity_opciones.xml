<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro"
    tools:context=".OpcionesActivity" >
	
    <ScrollView
        android:id="@+id/opc_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:background="@color/gris_oscuro"
		        android:orientation="horizontal" >

		    	<TextView
		    	    android:id="@+id/opc_textView1"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_gravity="center_vertical"
		    	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    	    android:text="@string/app_name"
		    	    android:textColor="@color/blanco"
		    	    android:textSize="40sp"
		    	    android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="5dp"
			    android:background="@drawable/ext_linea"
			    android:orientation="horizontal" />
			
		    <LinearLayout
		        android:id="@+id/opc_layout_inicio"
		        android:layout_width="fill_parent"
		        android:layout_height="60dp"
		        android:clickable="true"
		        android:onClick="muestraHome"
		        android:orientation="horizontal" >

			    <ImageView
			        android:id="@+id/opc_imageView1"
			        android:layout_width="42dp"
			        android:layout_height="42dp"
			        android:layout_gravity="center_vertical"
			        android:layout_marginLeft="@dimen/activity_horizontal_margin"
			        android:contentDescription="@string/variable_progreso"
			        android:src="@drawable/ic_menu_home" />

				<TextView
				    android:id="@+id/opc_textView2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:text="@string/menu_settings0"
				    android:textSize="30sp"
				    android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="5dp"
			    android:background="@drawable/ext_linea"
			    android:orientation="horizontal" />
			
			<LinearLayout
			    android:id="@+id/opc_layout_conf"
			    android:layout_width="fill_parent"
			    android:layout_height="60dp"
			    android:clickable="true"
			    android:onClick="muestraConfiguracion"
			    android:orientation="horizontal" >

			    <ImageView
			        android:id="@+id/opc_imageView2"
			        android:layout_width="42dp"
			        android:layout_height="42dp"
			        android:layout_gravity="center_vertical"
			        android:layout_marginLeft="@dimen/activity_horizontal_margin"
			        android:contentDescription="@string/variable_progreso"
			        android:src="@drawable/ic_menu_configuracion" />

				<TextView
				    android:id="@+id/opc_textView3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:text="@string/menu_settings1"
				    android:textSize="30sp"
				    android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="5dp"
			    android:background="@drawable/ext_linea"
			    android:orientation="horizontal" />
			
			<LinearLayout
			    android:id="@+id/opc_layout_pass"
			    android:layout_width="fill_parent"
			    android:layout_height="60dp"
			    android:clickable="true"
			    android:onClick="muestraPassword"
			    android:orientation="horizontal" >

				<ImageView
				    android:id="@+id/opc_imageView3"
				    android:layout_width="42dp"
				    android:layout_height="42dp"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="@dimen/activity_horizontal_margin"
				    android:contentDescription="@string/variable_progreso"
				    android:src="@drawable/ic_menu_password" />

				<TextView
				    android:id="@+id/opc_textView4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:text="@string/menu_settings2"
				    android:textSize="30sp"
				    android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="5dp"
			    android:background="@drawable/ext_linea"
			    android:orientation="horizontal" />
			
			<LinearLayout
			    android:id="@+id/opc_layout_borra"
			    android:layout_width="fill_parent"
			    android:layout_height="60dp"
			    android:clickable="true"
			    android:onClick="muestraBorrar"
			    android:orientation="horizontal" >

				<ImageView
				    android:id="@+id/opc_imageView4"
				    android:layout_width="42dp"
				    android:layout_height="42dp"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="@dimen/activity_horizontal_margin"
				    android:contentDescription="@string/variable_progreso"
				    android:src="@drawable/ic_menu_borrar" />

				<TextView
				    android:id="@+id/opc_textView5"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:text="@string/menu_settings3"
				    android:textSize="30sp"
				    android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="5dp"
			    android:background="@drawable/ext_linea"
			    android:orientation="horizontal" />
			
			<LinearLayout
			    android:id="@+id/opc_layout_about"
			    android:layout_width="fill_parent"
			    android:layout_height="60dp"
			    android:clickable="true"
			    android:onClick="muestraAcerca"
			    android:orientation="horizontal" >

				<ImageView
				    android:id="@+id/opc_imageView5"
				    android:layout_width="42dp"
				    android:layout_height="42dp"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="@dimen/activity_horizontal_margin"
				    android:contentDescription="@string/variable_progreso"
				    android:src="@drawable/ic_menu_acerca" />

				<TextView
				    android:id="@+id/opc_textView6"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:text="@string/menu_settings4"
				    android:textSize="30sp"
				    android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="5dp"
			    android:background="@drawable/ext_linea"
			    android:orientation="horizontal" />
			
		</LinearLayout>
		
	</ScrollView>
	
</RelativeLayout>
