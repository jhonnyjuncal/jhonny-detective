<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaActivity" >

    <ImageView
        android:id="@+id/fondo_acerca"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/variable_progreso"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fondo1" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
	
	    <ImageView
	        android:id="@+id/acer_imageView1"
	        android:layout_width="120dp"
	        android:layout_height="140dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/private_detective_icon" />
			
	    <TextView
	        android:id="@+id/acer_textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="20dp"
	        android:layout_toRightOf="@+id/acer_imageView1"
	        android:text="@string/app_name"
	        android:textSize="30sp"
	        android:textStyle="bold"
	        android:textColor="@color/blanco" />
			
	    <TextView
	        android:id="@+id/acer_textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="70dp"
	        android:layout_toRightOf="@+id/acer_imageView1"
	        android:text="@string/version_app"
	        android:textSize="15sp"
	        android:textColor="@color/blanco" />
			
	    <TextView
	        android:id="@+id/acer_textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginTop="70dp"
	        android:layout_toRightOf="@id/acer_textView2"
	        android:text="@string/variable_progreso"
	        android:textColor="@color/blanco"
	        android:textSize="15sp" />
			
	    <TextView
	        android:id="@+id/acer_textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="90dp"
	        android:layout_toRightOf="@+id/acer_imageView1"
	        android:text="@string/fecha_creacion"
	        android:textSize="15sp"
	        android:textColor="@color/blanco" />
			
	    <TextView
	        android:id="@+id/acer_textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="90dp"
	        android:layout_toRightOf="@id/acer_textView4"
	        android:text="@string/variable_progreso"
	        android:textColor="@color/blanco"
	        android:textSize="15sp" />
	    
	    <TextView
	        android:id="@+id/acer_textView8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="110dp"
	        android:layout_toRightOf="@+id/acer_imageView1"
	        android:text="@string/pais_creacion"
	        android:textSize="15sp"
	        android:textColor="@color/blanco" />
			
	    <TextView
	        android:id="@+id/acer_textView9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="35dp"
	        android:layout_marginTop="110dp"
	        android:layout_toRightOf="@id/acer_textView8"
	        android:text="@string/pais"
	        android:textColor="@color/blanco"
	        android:textSize="15sp" />
	
	    <TextView
	        android:id="@+id/acer_textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/acer_imageView1"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="30dp"
	        android:text="@string/label_desarrollado_por"
	        android:textColor="@color/blanco"
	        android:textSize="15sp" />
	    	
	    <TextView
	        android:id="@+id/acer_textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/acer_textView6"
	        android:layout_marginLeft="30dp"
	        android:text="@string/label_creador"
	        android:textColor="@color/blanco"
	        android:textSize="15sp"
	        android:textStyle="bold" />
	    
	    <LinearLayout
		    android:id="@+id/linearLayout2"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:layout_alignParentBottom="true"
		    android:orientation="vertical"
		    android:weightSum="1">
		    
		</LinearLayout>
		
	    <ImageView
	        android:id="@+id/acer_imageView2"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_marginLeft="40dp"
	        android:layout_marginTop="240dp"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/ic_facebook" />
	
	</RelativeLayout>
	
</FrameLayout>