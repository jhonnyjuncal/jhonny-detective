<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PosicionesActivity" >

    <ImageView
        android:id="@+id/fondo_posiciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/variable_progreso"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fondo1" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/label_latitud"
	        android:textColor="@color/blanco" />
	
	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="130dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="60dp"
	        android:layout_marginTop="5dp"
	        android:inputType="text"
	        android:paddingBottom="0dp"
	        android:paddingTop="0dp"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="205dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/label_longitud"
	        android:textColor="@color/blanco" />
	
	    <EditText
	        android:id="@+id/editText2"
	        android:layout_width="130dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="60dp"
	        android:layout_marginTop="40dp"
	        android:inputType="text"
	        android:paddingBottom="0dp"
	        android:paddingTop="0dp"
	        android:textSize="12sp"
	        android:width="120dp" />
	    
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="43dp"
	        android:text="@string/label_fecha"
	        android:textColor="@color/blanco" />
	
	    <EditText
	        android:id="@+id/editText3"
	        android:layout_width="130dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="270dp"
	        android:layout_marginTop="5dp"
	        android:inputType="text"
	        android:paddingBottom="0dp"
	        android:paddingTop="0dp"
	        android:textSize="12sp" />
	    
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="205dp"
	        android:layout_marginTop="43dp"
	        android:text="@string/label_hora"
	        android:textColor="@color/blanco" />
	
	    <EditText
	        android:id="@+id/editText4"
	        android:layout_width="130dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="270dp"
	        android:layout_marginTop="40dp"
	        android:inputType="text"
	        android:paddingBottom="0dp"
	        android:paddingTop="0dp"
	        android:textSize="12sp"
	        android:width="120dp" />
	    
		<ListView
		    android:id="@+id/listView1"
		    android:layout_width="wrap_content"
		    android:layout_height="10dp"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginBottom="50dp"
		    android:layout_marginTop="70dp"
		    android:background="@color/gris_claro"
		    android:clickable="true"
		    android:dividerHeight="1dp"
		    android:fadingEdge="vertical|horizontal"
		    android:fadingEdgeLength="1dp"
		    android:minHeight="10dp"
		    android:paddingBottom="0dp"
		    android:paddingLeft="@dimen/padding_izquierda" />
	    
	    <LinearLayout
		    android:id="@+id/linearLayout2"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:layout_alignParentBottom="true"
		    android:orientation="vertical"
		    android:weightSum="1">
			
		</LinearLayout>
	    
	</RelativeLayout>
	
</FrameLayout>